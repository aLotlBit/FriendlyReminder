<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/days_passed_layout"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <TextView
            android:paddingTop="@dimen/padding_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="@dimen/font_medium"
            android:text="Days passed:"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/padding_small"
            android:id="@+id/dialog_days_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_height="1dp"
        android:background="#000"
        android:padding="@dimen/padding_medium"/>

    <RelativeLayout
        android:layout_above="@+id/days_passed_layout"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_medium" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_medium"
            android:id="@+id/notification_text"
            android:paddingBottom="@dimen/padding_medium"
            android:text="Notification:" />


        <LinearLayout
            android:id="@+id/interval_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/notification_text"

            >

            <TextView
                android:layout_gravity="left"
                android:layout_weight="1"

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Interval"
                />

            <Button
                android:id="@+id/btn_set_interval"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Set"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_medium"
            android:id="@+id/reminder_text"
            android:paddingBottom="@dimen/padding_medium"
            android:text="Notification:" />


        <LinearLayout
            android:id="@+id/time_of_day_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/interval_layout"

            >

            <TextView
                android:layout_gravity="left"
                android:layout_weight="1"

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Time"
                />

            <Button
                android:id="@+id/btn_set_time_of_day"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Foo2"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/reminder_layout1"
            android:layout_below="@+id/time_of_day_Layout"

            >

            <TextView
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Days Left:"

                />

            <TextView
                android:id="@+id/tv_days_left"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="Foo"

                />

        </LinearLayout>




    </RelativeLayout>





</LinearLayout>